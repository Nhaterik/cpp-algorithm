#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n, mx = -1, i, l;
    cin >> n;
    string s;
    cin >> s;
    s = "z" + s;
    int dp[n + 1][n + 1];
    memset(dp, 0, sizeof(dp));
    for (int i = 1; i <= n; i++)
        dp[i][i] = 1;
    for (l = 2; l <= n; l++)
    {
        for (i = 1; i <= n - l + 1; i++)
        {
            int j = i + l - 1;
            if (l == 2 && s[i] == s[j])
                dp[i][j] = 1;
            else if (s[i] == s[j])
                dp[i][j] = dp[i + 1][j - 1];
            if (dp[i][j])
                mx = max(mx, l);
        }
    }
    // for (int i = 1; i <= n; i++)
    // {
    //     for (int j = 1; j <= n; j++)
    //         cout << dp[i][j] << " ";
    //     cout << endl;
    // }
    cout << mx << endl;
    return 0;
}
